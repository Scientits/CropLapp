<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_back"
    android:layout_margin="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:background="#E1C2BFBF"
        >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/film_image"
                android:layout_width="350px"
                android:layout_height="350px"
                android:gravity="center"
                android:layout_gravity="center"
                android:src="@mipmap/kodakcolorplus"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:text="Tên film:"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/film_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/filmname"
                    android:gravity="center"
                    android:layout_weight="0.6"
                    android:layout_margin="5dp"
                    android:textColor="#000000"
                    android:background="@drawable/list_item_back" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:text="Giá:"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="17dp"/>

                <TextView
                    android:id="@+id/film_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/filmprice"
                    android:gravity="center"
                    android:layout_weight="0.6"
                    android:layout_margin="5dp"
                    android:textColor="#000000"
                    android:background="@drawable/list_item_back" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:gravity="right|center_vertical"
                   android:text="Trạng Thái:"
                   android:textStyle="bold"
                   android:textColor="#000000"
                   android:textSize="17dp"/>

               <TextView
                   android:id="@+id/film_status"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:text="@string/filmstatus"
                   android:gravity="center"
                   android:layout_weight="0.6"
                   android:layout_margin="5dp"
                   android:textColor="#000000"
                   android:background="@drawable/list_item_back"
                   />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
